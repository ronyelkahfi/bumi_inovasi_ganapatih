{
  "openapi": "3.0.0",
  "info": {
    "title": "BiG Chat",
    "description": "Aplikasi Chatting Sederhana",
    "version": "1.0.0"
  },
  "paths": {
    "/users/register": {
      "post": {
        "summary": "Registration user by phone number",
        "description": "Registers a new user using their phone number",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phoneNumber": {
                    "type": "string",
                    "description": "Phone number of the user"
                  },
                  "name": {
                    "type": "string",
                    "description": "Name of the user"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password of the user"
                  }
                },
                "required": ["phoneNumber", "name", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful registration",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "userId": {
                      "type": "string",
                      "description": "ID of the registered user"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/chat": {
      "post": {
        "summary": "Create a chat",
        "description": "Creates a new chat",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "participants": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "description": "User ID of a participant"
                    }
                  }
                },
                "required": ["participants"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Chat created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "chatId": {
                      "type": "string",
                      "description": "ID of the created chat"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/chat/group": {
      "post": {
        "summary": "Create a group chat",
        "description": "Creates a new group chat",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "participants": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "description": "User ID of a participant"
                    }
                  },
                  "groupName": {
                    "type": "string",
                    "description": "Name of the group"
                  }
                },
                "required": ["participants", "groupName"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Group chat created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "chatId": {
                      "type": "string",
                      "description": "ID of the created group chat"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/chat/{chatId}/upload": {
      "post": {
        "summary": "Upload an image to a chat",
        "description": "Uploads an image to a specific chat",
        "parameters": [
          {
            "name": "chatId",
            "in": "path",
            "description": "ID of the chat",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary",
                    "description": "Image file to upload"
                  }
                },
                "required": ["image"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Image uploaded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "imageUrl": {
                      "type": "string",
                      "description": "URL of the uploaded image"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/chat/{chatId}/delete": {
      "delete": {
        "summary": "Delete chat for me",
        "description": "Deletes a chat for the authenticated user",
        "parameters": [
          {
            "name": "chatId",
            "in": "path",
            "description": "ID of the chat",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Chat deleted successfully"
          }
        }
      }
    },
    "/chat/{chatId}/delete/all": {
      "delete": {
        "summary": "Delete chat for all",
        "description": "Deletes a chat for all participants",
        "parameters": [
          {
            "name": "chatId",
            "in": "path",
            "description": "ID of the chat",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Chat deleted for all participants"
          }
        }
      }
    }
  }
}
